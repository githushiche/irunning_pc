<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- 头 -->

        <TextView
            android:id="@+id/id_dyn_add_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:gravity="left"
            android:text="取消"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center_horizontal"
            android:text="个人动态"
            android:textColor="@color/app_red_color"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/id_dyn_add_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:gravity="right"
            android:text="发布"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <EditText
            android:id="@+id/id_dyn_add_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@null"
            android:gravity="left"
            android:hint="分享新鲜事"
            android:maxWidth="400dp"
            android:minHeight="200dp"
            android:text="" />

        <RelativeLayout
            android:id="@+id/id_dyn_add_pick"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignBottom="@+id/id_dyn_add_content"
            android:layout_marginLeft="5dp"
            android:background="#DBDBDB">

            <ImageView
                android:id="@+id/id_dynamic_add_cap"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:src="@mipmap/ic_more_capture" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:hint="照片/视频" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/id_iv_dynamicadd_img"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/id_dyn_add_pick"
            android:scaleType="centerCrop" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/id_dynamic_show_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="3"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>