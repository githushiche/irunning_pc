<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:riv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="0.5dp">

    <!-- app:cardCornerRadius 四角圆角大小 -->
    <!-- app:cardElevation z轴阴影 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 用户头像 -->
        <com.example.hsc.irunning.main.view.RoundImageView
            android:id="@+id/id_iv_dynamic_userimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:src="@mipmap/step"
            riv:borderRadius="40dp"
            riv:type="round" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/id_iv_dynamic_userimg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_tv_dynamic_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="趣动跑跑"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_tv_dynamic_username"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_tv_dynamic_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="显示时间" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_iv_dynamic_userimg"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_tv_dynamic_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:maxHeight="100dp"
                android:maxLines="6"
                android:text="这是我发布的内容"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/id_iv_dynamic_photo"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/step" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_tv_dynamic_kill_kll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="当前已消耗了100卡路里" />

                <TextView
                    android:id="@+id/id_tv_dynamic_steps"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="行走了10012步"
                    android:textAlignment="textEnd" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/id_btn_dynamic_like"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="点赞" />

                <Button
                    android:id="@+id/id_btn_dynamic_comment"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="评论" />
            </LinearLayout>

            <TextView
                android:id="@+id/id_tv_dynamic_likes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_left_hobby"
                android:maxHeight="100dp"
                android:text="张三、李四、王二等100多人赞了你"
                android:textSize="16dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/id_rv_dynamic_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

            </android.support.v7.widget.RecyclerView>

            <EditText
                android:id="@+id/id_et_dynamic_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/hello_shape"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="评论"
                android:imeOptions="actionSend" />
        </LinearLayout>
    </RelativeLayout>

    <!-- <include layout="@layout/dynamic_msg_content" /> -->

</android.support.v7.widget.CardView>