<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left|top"
    android:orientation="horizontal"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/id_iv_left_message_picture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/step" />

    <TextView
        android:id="@+id/id_mes_left_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/item_msg_left_selector"
        android:gravity="center_vertical"
        android:maxWidth="200dp"
        android:minHeight="30dp"
        android:text="好友发送的消息"
        android:textColor="@color/app_black_color"
        android:textSize="16sp" />

    <ProgressBar
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="2dp"
        android:indeterminate="true"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/progress_bar_rotate"
        android:visibility="visible" />

</LinearLayout>