<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|top"
        android:orientation="horizontal"
        android:padding="5dp">

        <!-- 文本消息 -->

        <ProgressBar
            android:id="@+id/id_pb_right_progress"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="2dp"
            android:indeterminate="true"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/progress_bar_rotate"
            android:max="100"
            android:visibility="visible" />

        <TextView
            android:id="@+id/id_message_right_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/item_msg_right_selector"
            android:gravity="center_vertical"
            android:maxWidth="200dp"
            android:minHeight="30dp"
            android:text="这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容"
            android:textColor="@color/app_black_color"
            android:textSize="16sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_iv_right_message_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/step" />
    </LinearLayout>

</LinearLayout>