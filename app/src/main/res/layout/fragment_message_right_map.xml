<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|top"
        android:orientation="horizontal"
        android:padding="5dp">

        <!-- 文本消息 -->

        <ProgressBar
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="2dp"
            android:indeterminate="true"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/progress_bar_rotate"
            android:max="100"
            android:visibility="visible" />

        <com.baidu.mapapi.map.MapView
            android:id="@+id/id_share_mapview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:gravity="center_vertical"></com.baidu.mapapi.map.MapView>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/step" />
    </LinearLayout>

</LinearLayout>